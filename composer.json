{
    "name": "johncms/johncms",
    "description": "Content Management System",
    "homepage": "https://johncms.com",
    "license": "GPL-3.0-only",
    "keywords": [
        "johncms",
        "cms",
        "php",
        "mysql",
        "mobile"
    ],
    "authors": [
        {
            "name": "JohnCMS Contributors",
            "homepage": "https://github.com/johncms/johncms/graphs/contributors"
        }
    ],
    "support": {
        "forum": "https://johncms.com/forum",
        "source": "https://github.com/johncms/johncms",
        "issues": "https://johncms.com/forum/index.php?id=67"
    },
    "config": {
        "vendor-dir": "system/vendor"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "ext-zip": "*",
        "ezyang/htmlpurifier": "^4.13",
        "gettext/translator": "^1.0",
        "guzzlehttp/psr7": "^1.8",
        "illuminate/cache": "^8.52",
        "illuminate/database": "^8.52",
        "illuminate/filesystem": "^8.52",
        "imangazaliev/didom": "^1.17",
        "intervention/image": "^2.6",
        "james-heinrich/getid3": "^1.9",
        "laminas/laminas-config-aggregator": "^1.5",
        "laminas/laminas-httphandlerrunner": "^1.4",
        "laminas/laminas-mail": "^2.14",
        "laminas/laminas-uri": "^2.8",
        "laminas/laminas-validator": "^2.14",
        "league/flysystem": "^2.2",
        "league/route": "^5.1",
        "mobicms/captcha": "^3.1",
        "mobicms/render": "^3.0",
        "nikic/fast-route": "^1.3",
        "johncms/ckeditor-media-embed": "^1.1",
        "johncms/johncms-pagination": "^2.0",
        "oomphinc/composer-installers-extender": "^2.0",
        "johncms/homepage": "dev-develop",
        "johncms/auth": "dev-develop",
        "johncms/admin": "dev-develop",
        "johncms/news": "dev-develop",
        "johncms/language": "dev-develop",
        "johncms/library": "dev-develop",
        "johncms/community": "dev-develop",
        "johncms/downloads": "dev-develop",
        "johncms/forum": "dev-develop",
        "johncms/guestbook": "dev-develop",
        "johncms/help": "dev-develop",
        "johncms/mail": "dev-develop",
        "johncms/notifications": "dev-develop",
        "johncms/online": "dev-develop",
        "johncms/profile": "dev-develop",
        "johncms/redirect": "dev-develop"
    },
    "require-dev": {
        "fakerphp/faker": "^1.15",
        "gettext/gettext": "^5.5",
        "gettext/php-scanner": "^1.3",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.7"
    },
    "autoload": {
        "files": [
            "config/constants.php",
            "system/helpers.php"
        ],
        "psr-4": {
            "Johncms\\": "system/src/",
            "Johncms\\System\\Legacy\\": "system/src-legacy/",
            "Johncms\\Install\\": "install/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "system/bin/scan",
        "system/bin/translate"
    ],
    "scripts": {
        "check": [
            "@cs-check"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "psalm-fix": "psalm --alter --issues=MissingReturnType,MissingParamType",
        "translate": "translate",
        "translate-scan": "scan",
        "test": "phpunit --colors=always"
    },
    "repositories": [
        {
            "type": "path",
            "url": "modules/johncms/homepage"
        },
        {
            "type": "path",
            "url": "modules/johncms/auth"
        },
        {
            "type": "path",
            "url": "modules/johncms/news"
        },
        {
            "type": "path",
            "url": "modules/johncms/admin"
        },
        {
            "type": "path",
            "url": "modules/johncms/language"
        },
        {
            "type": "path",
            "url": "modules/johncms/community"
        },
        {
            "type": "path",
            "url": "modules/johncms/downloads"
        },
        {
            "type": "path",
            "url": "modules/johncms/forum"
        },
        {
            "type": "path",
            "url": "modules/johncms/guestbook"
        },
        {
            "type": "path",
            "url": "modules/johncms/help"
        },
        {
            "type": "path",
            "url": "modules/johncms/library"
        },
        {
            "type": "path",
            "url": "modules/johncms/mail"
        },
        {
            "type": "path",
            "url": "modules/johncms/notifications"
        },
        {
            "type": "path",
            "url": "modules/johncms/online"
        },
        {
            "type": "path",
            "url": "modules/johncms/profile"
        },
        {
            "type": "path",
            "url": "modules/johncms/redirect"
        }
    ],
    "extra": {
        "installer-types": [
            "johncms-module"
        ],
        "installer-paths": {
            "modules/{$vendor}/{$name}/": [
                "type:johncms-module"
            ]
        }
    }
}
